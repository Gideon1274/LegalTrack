{
    "version": 2,
    "installCommand": "pip install -r requirements-vercel.txt",
    "buildCommand": "python manage.py collectstatic --noinput",
    "builds": [
        {
            "src": "api/wsgi.py",
            "use": "@vercel/python",
            "config": {
                "maxLambdaSize": "50mb"
            }
        }
    ],
    "routes": [
        {
            "src": "/(.*)",
            "dest": "/api/wsgi.py"
        }
    ],
    "build": {
        "env": {
            "PYTHONUNBUFFERED": "1"
        }
    }
}