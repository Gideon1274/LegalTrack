{
    "version": 2,
    "builds": [
        {
            "src": "api/wsgi.py",
            "use": "@vercel/python",
            "config": {
                "maxLambdaSize": "50mb"
            }
        },
        {
            "src": "static/**",
            "use": "@vercel/static"
        }
    ],
    "routes": [
        {
            "src": "/static/(.*)",
            "dest": "/static/$1"
        },
        {
            "src": "/media/(.*)",
            "dest": "/media/$1"
        },
        {
            "src": "/(.*)",
            "dest": "/api/wsgi.py"
        }
    ],
    "env": {
        "DJANGO_SETTINGS_MODULE": "Capstone.settings",
        "SECRET_KEY": "@DJANGO_SECRET",
        "DATABASE_URL": "@DATABASE_URL"
    },
    "build": {
        "env": {
            "PYTHONUNBUFFERED": "1"
        }
    }
}