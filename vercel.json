{
    "version": 2,
    "installCommand": "pip install -r requirements.txt",
    "buildCommand": "python manage.py migrate --noinput && python manage.py collectstatic --noinput",
    "routes": [
        {
            "src": "/(.*)",
            "dest": "/api/wsgi.py"
        }
    ],
    "build": {
        "env": {
            "PYTHONUNBUFFERED": "1"
        }
    }
}